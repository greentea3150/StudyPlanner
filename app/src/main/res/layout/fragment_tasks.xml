<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f4f4f4">

    <!-- My Schedules Title -->
    <TextView
        android:id="@+id/tvMySchedules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Schedules"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#3A3A3A" />

    <!-- Lists Button -->
    <Button
        android:id="@+id/btnLists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lists"
        android:textSize="16sp"
        android:backgroundTint="#C6F25E"
        android:textColor="#3A3A3A"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Total Tasks TextView -->
    <TextView
        android:id="@+id/tvTotalTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Tasks: 6"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:textColor="#6F6F6F" />

    <!-- Scrollable List of Tasks -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Task Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="#F8F8F8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Task Title -->
                    <TextView
                        android:id="@+id/tvTaskTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electrical Machines 2"
                        android:textSize="18sp"
                        android:textColor="#3A3A3A" />

                    <!-- Task Date and Time -->
                    <TextView
                        android:id="@+id/tvTaskDateTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16/09/2024 | 07:00 - 08:00"
                        android:textSize="16sp"
                        android:textColor="#6F6F6F"
                        android:layout_marginTop="8dp" />

                    <!-- Task Type -->
                    <TextView
                        android:id="@+id/tvTaskType1"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Homework"
                        android:textSize="14sp"
                        android:background="@drawable/task_type_background"
                        android:padding="4dp"
                        android:textColor="#3A3A3A"
                        android:layout_marginTop="8dp" />

                    <!-- Buttons (Status, View Details, and Delete) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_marginTop="16dp">

                        <!-- Status Button -->
                        <Button
                            android:id="@+id/btnTaskStatus1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Started"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FF6F6F" />

                        <!-- View Details Button -->
                        <Button
                            android:id="@+id/btnViewDetails1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="#007BFF" />
                    </LinearLayout>
                    <!-- Delete Button -->
                    <Button
                        android:id="@+id/btnDeleteTask1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="#FF6F6F"
                        android:layout_gravity="end" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Task Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="#DEF7D3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Task Title -->
                    <TextView
                        android:id="@+id/tvTaskTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motion Design"
                        android:textSize="18sp"
                        android:textColor="#3A3A3A" />

                    <!-- Task Date and Time -->
                    <TextView
                        android:id="@+id/tvTaskDateTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16/09/2024 | 09:00 - 10:00"
                        android:textSize="16sp"
                        android:textColor="#6F6F6F"
                        android:layout_marginTop="8dp" />

                    <!-- Task Type -->
                    <TextView
                        android:id="@+id/tvTaskType2"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Task"
                        android:textSize="14sp"
                        android:background="@drawable/task_type_background"
                        android:padding="4dp"
                        android:textColor="#3A3A3A"
                        android:layout_marginTop="8dp" />

                    <!-- Buttons (Status, View Details, and Delete) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_marginTop="16dp">

                        <!-- Status Button -->
                        <Button
                            android:id="@+id/btnTaskStatus2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Started"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FF6F6F" />

                        <!-- View Details Button -->
                        <Button
                            android:id="@+id/btnViewDetails2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="#007BFF" />


                    </LinearLayout>
                    <!-- Delete Button -->
                    <Button
                        android:id="@+id/btnDeleteTask2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="#FF6F6F"
                        android:layout_gravity="end" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Task Card 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="#E9F4FC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Task Title -->
                    <TextView
                        android:id="@+id/tvTaskTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Computational Physics"
                        android:textSize="18sp"
                        android:textColor="#3A3A3A" />

                    <!-- Task Date and Time -->
                    <TextView
                        android:id="@+id/tvTaskDateTime3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16/09/2024 | 10:00 - 11:00"
                        android:textSize="16sp"
                        android:textColor="#6F6F6F"
                        android:layout_marginTop="8dp" />

                    <!-- Task Type -->
                    <TextView
                        android:id="@+id/tvTaskType3"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Exam"
                        android:textSize="14sp"
                        android:background="@drawable/task_type_background"
                        android:padding="4dp"
                        android:textColor="#3A3A3A"
                        android:layout_marginTop="8dp" />

                    <!-- Buttons (Status, View Details, and Delete) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_marginTop="16dp">

                        <!-- Status Button -->
                        <Button
                            android:id="@+id/btnTaskStatus3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Started"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FF6F6F" />

                        <!-- View Details Button -->
                        <Button
                            android:id="@+id/btnViewDetails3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="#007BFF"
                            android:layout_gravity="end" />


                    </LinearLayout>
                    <!-- Delete Button -->
                    <Button
                        android:id="@+id/btnDeleteTask3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="#FF6F6F"
                        android:layout_gravity="end" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Additional Task Cards can be added here -->

        </LinearLayout>
    </ScrollView>

</LinearLayout>
